                </EventTrigger>
            </Image.Triggers>

        </Image>
        <Image x:Name="banhxe3" Width="95" Canvas.Top="30" Canvas.Left="855" Source="/Images/Background/startimg.png" RenderTransformOrigin="0.5,0.5" >
