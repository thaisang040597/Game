        <Image Width="350" Height="450" Source="/Images/Game1/Round4/children.png" Margin="1000 250 50 50"></Image>
        <Canvas>
            <Image Width="150" Height="150" Source="/Images/Game1/Round4/lemon1.png" Canvas.Left="200" Canvas.Top="280"></Image>
            <Image Width="80" Height="80" Source="/Images/Game1/Round4/lemon2.png" Canvas.Top="600" Canvas.Left="650"></Image>
        </Canvas>
        
    </Grid>
